<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.personalbudget.controller.forms.EntryEditFormController">
   <children>
      <Label fx:id="titleLabel" styleClass="big-text" text="Add Item">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin></Label>
      <ScrollPane style="-fx-background-color: #0000;" VBox.vgrow="ALWAYS">
         <content>
            <GridPane hgap="8.0" vgap="4.0">
              <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="200.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" valignment="TOP" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" valignment="TOP" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" valignment="TOP" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" valignment="TOP" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" valignment="TOP" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label prefHeight="25.0" text="%forms.entry.type" />
                  <HBox spacing="6.0" GridPane.columnIndex="1">
                     <children>
                        <RadioButton fx:id="typeIncomeRadio" mnemonicParsing="false" text="%main.terms.income">
                           <toggleGroup>
                              <ToggleGroup fx:id="typeGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="typeExpenseRadio" mnemonicParsing="false" text="%main.terms.expense" toggleGroup="$typeGroup" />
                     </children>
                     <padding>
                        <Insets bottom="4.0" top="3.0" />
                     </padding>
                  </HBox>
                  <Label prefHeight="25.0" text="%forms.entry.amount" GridPane.rowIndex="1" />
                  <HBox spacing="4.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <TextField fx:id="amountField" GridPane.columnIndex="1" HBox.hgrow="ALWAYS" />
                        <Label fx:id="currencyLabel" prefHeight="25.0" text="USD" />
                     </children>
                  </HBox>
                  <Label prefHeight="25.0" text="%main.terms.category" GridPane.rowIndex="2" />
                  <ComboBox fx:id="categoryField" editable="true" prefWidth="300.0" style="-fx-font-size: 0;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label prefHeight="25.0" text="%main.terms.date" GridPane.rowIndex="3" />
                  <HBox spacing="4.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                     <children>
                        <Button mnemonicParsing="false" onAction="#setToday" text="%forms.entry.today" />
                        <DatePicker fx:id="dateField" maxWidth="1.7976931348623157E308" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <Label prefHeight="25.0" text="%main.terms.notes" GridPane.rowIndex="4" />
                  <TextArea fx:id="notesField" prefHeight="100.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </GridPane>
         </content>
         <VBox.margin>
            <Insets left="-10.0" right="-10.0" />
         </VBox.margin>
      </ScrollPane>
      <HBox spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#close" text="%forms.common.actions.cancel" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" text="%forms.common.actions.delete" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmit" text="Create" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
