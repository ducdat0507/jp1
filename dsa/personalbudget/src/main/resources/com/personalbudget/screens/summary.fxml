<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.personalbudget.controller.screens.SummaryScreenController">
   <children>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Total Profits" />
                  <Label fx:id="totalProfitLabel" styleClass="big-text" text="\$000.000.000" />
               </children>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Total Expenses" />
                  <Label fx:id="totlaExpenseLabel" styleClass="big-text" text="\$000.000.000" />
               </children>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Total Balance" />
                  <Label fx:id="totalBalanceLabel" styleClass="big-text" text="\$000.000.000" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin></HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
