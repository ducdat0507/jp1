<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.personalbudget.controller.screens.SummaryScreenController">
   <children>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Total Incomes" />
                  <Label fx:id="totalIncomeLabel" styleClass="big-text" text="\$000.000.000" />
               </children>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Total Expenses" />
                  <Label fx:id="totalExpenseLabel" styleClass="big-text" text="\$000.000.000" />
               </children>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Total Balance" />
                  <Label fx:id="totalBalanceLabel" styleClass="big-text" text="\$000.000.000" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin></HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" VBox.vgrow="ALWAYS">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <PieChart fx:id="incomeByCategoryChart" labelsVisible="false" styleClass="summary-chart" title="Incomes by Category" HBox.hgrow="ALWAYS" />
            <PieChart fx:id="expenseByCategoryChart" labelsVisible="false" styleClass="summary-chart" title="Expenses by Category" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
