<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox alignment="CENTER" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.personalbudget.controller.PrimaryController">
   <children>
      <MenuBar useSystemMenuBar="true">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox fx:id="nav" alignment="CENTER" spacing="10.0" styleClass="big-nav">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox fx:id="titleHolder" alignment="CENTER">
               <children>
                  <Label text="20">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <styleClass>
                        <String fx:value="nav-title" />
                        <String fx:value="clickable" />
                     </styleClass>
                  </Label>
                  <Label styleClass="nav-title" text=" " />
                  <Label text="September">
                     <styleClass>
                        <String fx:value="nav-title" />
                        <String fx:value="clickable" />
                     </styleClass>
                  </Label>
                  <Label styleClass="nav-title" text=" " />
                  <Label text="2024">
                     <styleClass>
                        <String fx:value="nav-title" />
                        <String fx:value="clickable" />
                     </styleClass>
                  </Label>
               </children>
            </HBox>
            <Pane HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="nav-tab-buttons">
               <children>
                  <ToggleButton fx:id="summaryTabButton" mnemonicParsing="false" selected="true" styleClass="button" text="Summary">
                     <toggleGroup>
                        <ToggleGroup fx:id="screenMainTabs" />
                     </toggleGroup>
                  </ToggleButton>
                  <ToggleButton fx:id="calendarTabButton" disable="true" mnemonicParsing="false" styleClass="button" text="Calendar" toggleGroup="$screenMainTabs" />
                  <ToggleButton fx:id="recordTabButton" mnemonicParsing="false" styleClass="button" text="Records" toggleGroup="$screenMainTabs" />
               </children>
               <padding>
                  <Insets bottom="-1.0" left="-1.0" right="-1.0" />
               </padding>
            </HBox>
         </children>
         <effect>
            <DropShadow blurType="GAUSSIAN" height="6.0" offsetY="2.0" radius="2.5" width="6.0">
               <color>
                  <Color opacity="0.25" />
               </color>
            </DropShadow>
         </effect>
      </HBox>
      <Pane fx:id="screenPane" VBox.vgrow="ALWAYS" />
      <HBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Pane HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" styleClass="footer-big-button" text="Add Income" />
            <Button mnemonicParsing="false" styleClass="footer-big-button" text="Add Expense" />
         </children>
      </HBox>
   </children>
</VBox>
