<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox alignment="CENTER" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.personalbudget.controller.PrimaryController">
   <children>
      <MenuBar useSystemMenuBar="true">
        <menus>
          <Menu mnemonicParsing="false" text="%menu.file">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleSave" text="%menu.file.save" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#handleGenerateData" text="%menu.file.generate_data" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <Menu fx:id="languageMenu" mnemonicParsing="false" text="%menu.file.language" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox fx:id="nav" alignment="CENTER" spacing="10.0" styleClass="big-nav">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Button mnemonicParsing="false" onAction="#handlePreviousButtonClick" styleClass="nav-button" text="←" />
            <Button mnemonicParsing="false" onAction="#handleNextButtonClick" styleClass="nav-button" text="→" />
            <HBox fx:id="titleHolder" alignment="CENTER">
               <children>
                  <Label text="20">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <styleClass>
                        <String fx:value="nav-title" />
                        <String fx:value="clickable" />
                     </styleClass>
                  </Label>
                  <Label styleClass="nav-title" text=" " />
                  <Label text="September">
                     <styleClass>
                        <String fx:value="nav-title" />
                        <String fx:value="clickable" />
                     </styleClass>
                  </Label>
                  <Label styleClass="nav-title" text=" " />
                  <Label text="2024">
                     <styleClass>
                        <String fx:value="nav-title" />
                        <String fx:value="clickable" />
                     </styleClass>
                  </Label>
               </children>
            </HBox>
            <Pane HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="nav-tab-buttons">
               <children>
                  <ToggleButton fx:id="summaryTabButton" mnemonicParsing="false" selected="true" styleClass="button" text="%main.tabs.summary">
                     <toggleGroup>
                        <ToggleGroup fx:id="screenMainTabs" />
                     </toggleGroup>
                  </ToggleButton>
                  <ToggleButton fx:id="calendarTabButton" disable="true" mnemonicParsing="false" styleClass="button" text="%main.tabs.calendar" toggleGroup="$screenMainTabs" />
                  <ToggleButton fx:id="recordTabButton" mnemonicParsing="false" styleClass="button" text="%main.tabs.records" toggleGroup="$screenMainTabs" />
               </children>
               <padding>
                  <Insets bottom="-1.0" left="-1.0" right="-1.0" />
               </padding>
            </HBox>
         </children>
         <effect>
            <DropShadow blurType="GAUSSIAN" height="6.0" offsetY="2.0" radius="2.5" width="6.0">
               <color>
                  <Color opacity="0.25" />
               </color>
            </DropShadow>
         </effect>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Pane fx:id="screenPane" VBox.vgrow="ALWAYS" />
                  <HBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#openAddIncomeForm" styleClass="footer-big-button" text="%main.actions.add_income" />
                        <Button mnemonicParsing="false" onAction="#openAddExpenseForm" styleClass="footer-big-button" text="%main.actions.add_expense" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Pane fx:id="formPane" maxWidth="0.0" minWidth="0.0" prefWidth="400.0" visible="false">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Pane>
         </children>
      </HBox>
   </children>
</VBox>
